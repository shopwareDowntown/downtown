{% if availability == 1 %}
    {% set availabilityClass = "normal" %}
    {% set availabilityText =  "merchantBox.availabilityBadgeOpen"|trans %}
{% elseif availability == 2 %}
    {% set availabilityClass = "pick-up" %}
    {% set availabilityText = "merchantBox.availabilityBadgePickUp"|trans %}
{% else %}
    {% set availabilityClass = "inactive" %}
    {% set availabilityText = "merchantBox.availabilityBadgeInactive"|trans %}
{% endif %}

<div class="availability-wrapper">
    <div class="availability-badge {{ availabilityClass }}">
        {{ availabilityText }}
    </div>
</div>
