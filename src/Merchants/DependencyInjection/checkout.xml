<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Production\Merchants\Checkout\Cart\Subscriber\OrderPlacedSubscriber">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Shopware\Production\Portal\Services\TemplateMailSender"/>
            <tag name="kernel.event_listener"/>
        </service>

        <service id="Shopware\Production\Merchants\Checkout\Cart\Validator\CartValidator">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="event_dispatcher"/>
            <tag name="shopware.cart.validator"/>
        </service>
    </services>
</container>
